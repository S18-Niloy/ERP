@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to ERP Software</h1>
    <p class="lead">Optimize your business processes with our powerful ERP software.</p>
    <hr />

    <!-- Navigation Cards for Modules -->
    <div class="container">
        <div class="row">

            <!-- Inventory Management Card -->
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h4>Inventory Management</h4>
                    </div>
                    <div class="card-body">
                        <p>Track and manage stock levels in real-time. Easily update inventory and optimize stock allocation.</p>
                        <a href="@Url.Action("Index", "Inventory")" class="btn btn-primary">Go to Inventory</a>
                    </div>
                </div>
            </div>

            <!-- Supplier Management Card -->
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h4>Supplier Management</h4>
                    </div>
                    <div class="card-body">
                        <p>Store supplier details, assess performance, and manage contracts efficiently.</p>
                        <a href="@Url.Action("Index", "Supplier")" class="btn btn-success">View Suppliers</a>
                    </div>
                </div>
            </div>

            <!-- Warehouse Management Card -->
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header bg-warning text-white">
                        <h4>Warehouse Management</h4>
                    </div>
                    <div class="card-body">
                        <p>Manage multiple warehouses and allocate stock accordingly to meet demands.</p>
                        <a href="@Url.Action("Index", "Warehouse")" class="btn btn-warning">View Warehouse</a>
                    </div>
                </div>
            </div>
            <!-- Procurement Card -->
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header bg-warning text-white">
                        <h4>Procurement Management</h4>
                    </div>
                    <div class="card-body">
                        <p>Automate purchase requests, approvals, and orders</p>
                        <a href="@Url.Action("Index", "Procurement")" class="btn btn-warning">View Procurement</a>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <hr />

    <!-- User Authentication Section -->
    @if (Context.Session.GetString("Username") != null)
    {
        <div>
            Welcome, @Context.Session.GetString("Username")!
            <a href="@Url.Action("Logout", "Account")" class="btn btn-danger">Logout</a>
        </div>
    }
    else
    {
        <div>
            <a href="@Url.Action("Login", "Account")" class="btn btn-info">Login</a>
        </div>
    }

    <hr />

    <!-- Footer Section for Additional Information -->
    <footer class="text-center">
        <p>&copy; 2024 ERP Solutions. All rights reserved.</p>
        <p><a href="#">Privacy Policy</a> | <a href="#">Terms of Service</a></p>
    </footer>
</div>
