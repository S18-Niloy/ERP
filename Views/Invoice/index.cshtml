@model IEnumerable<ERP.Models.Invoice.Invoice>

    <h2>Invoice List</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Invoice ID</th>
                <th>Customer Name</th>
                <th>Invoice Date</th>
                <th>Total Amount</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var invoice in Model)
        {
            <tr>
                <td>@invoice.InvoiceId</td>
                <td>@invoice.CustomerName</td>
                <td>@invoice.InvoiceDate.ToShortDateString()</td>
                <td>@invoice.TotalAmount</td>
                <td>@invoice.Status</td>
                <td>
                    <a href="@Url.Action("Edit", "Invoice", new { id = invoice.InvoiceId })">Edit</a> |
                    <a href="@Url.Action("Details", "Invoice", new { id = invoice.InvoiceId })">Details</a> |
                    <a href="@Url.Action("Delete", "Invoice", new { id = invoice.InvoiceId })">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
