@model ERP.Models.Supplier.Supplier_M

<h2>Add Supplier</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ContactDetails"></label>
        <input asp-for="ContactDetails" class="form-control" />
        <span asp-validation-for="ContactDetails" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PerformanceRating"></label>
        <input asp-for="PerformanceRating" class="form-control" />
        <span asp-validation-for="PerformanceRating" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ContractDetails"></label>
        <textarea asp-for="ContractDetails" class="form-control"></textarea>
        <span asp-validation-for="ContractDetails" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>
