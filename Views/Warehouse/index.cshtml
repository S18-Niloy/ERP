@model IEnumerable<ERP.Models.Warehouse.Warehouse_M>

    <h2>Warehouses</h2>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Location</th>
                <th>Capacity</th>
                <th>Current Stock</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var warehouse in Model)
        {
            <tr>
                <td>@warehouse.Name</td>
                <td>@warehouse.Location</td>
                <td>@warehouse.Capacity</td>
                <td>@warehouse.CurrentStock</td>
                <td>
                    <a asp-action="Details" asp-route-id="@warehouse.WarehouseId" class="btn btn-info">Details</a>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <a href="/Warehouse/Create" class="btn btn-primary">Add Warehouse</a>
