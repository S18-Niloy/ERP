@{
    ViewData["Title"] = "Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Your Application</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        .card {
            margin-bottom: 20px;
        }
        .chart-container {
            position: relative;
            height:40vh;
            width:80vw;
        }
    </style>
</head>
<body>
    <div class="container-fluid mt-4">
        <h2>@ViewData["Title"]</h2>
        <hr />

        <!-- Inventory Overview -->
        <div class="row">
            <div class="col-md-3">
                <div class="card text-white bg-primary">
                    <div class="card-body">
                        <h5 class="card-title">Total Inventory</h5>
                        <p class="card-text">1,250 Items</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-success">
                    <div class="card-body">
                        <h5 class="card-title">Warehouses</h5>
                        <p class="card-text">5 Locations</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-warning">
                    <div class="card-body">
                        <h5 class="card-title">Suppliers</h5>
                        <p class="card-text">20 Suppliers</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-danger">
                    <div class="card-body">
                        <h5 class="card-title">Pending Orders</h5>
                        <p class="card-text">75 Orders</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sales Overview -->
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        Sales This Month
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">$50,000</h5>
                        <p class="card-text">Increase of 10% from last month.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        New Customers
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">150</h5>
                        <p class="card-text">5% growth this month.</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Charts Section -->
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        Inventory Levels
                    </div>
                    <div class="card-body">
                        <canvas id="inventoryChart"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        Sales by Category
                    </div>
                    <div class="card-body">
                        <canvas id="salesChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Orders Table -->
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        Recent Orders
                    </div>
                    <div class="card-body">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Order ID</th>
                                    <th>Customer</th>
                                    <th>Date</th>
                                    <th>Status</th>
                                    <th>Total ($)</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>ORD001</td>
                                    <td>John Doe</td>
                                    <td>2025-01-05</td>
                                    <td>Shipped</td>
                                    <td>1,200</td>
                                </tr>
                                <tr>
                                    <td>ORD002</td>
                                    <td>Jane Smith</td>
                                    <td>2025-01-06</td>
                                    <td>Processing</td>
                                    <td>850</td>
                                </tr>
                                <tr>
                                    <td>ORD003</td>
                                    <td>Acme Corp.</td>
                                    <td>2025-01-07</td>
                                    <td>Delivered</td>
                                    <td>2,500</td>
                                </tr>
                                <tr>
                                    <td>ORD004</td>
                                    <td>Bob Johnson</td>
                                    <td>2025-01-08</td>
                                    <td>Cancelled</td>
                                    <td>0</td>
                                </tr>
                                <tr>
                                    <td>ORD005</td>
                                    <td>Linda Lee</td>
                                    <td>2025-01-09</td>
                                    <td>Processing</td>
                                    <td>950</td>
                                </tr>
                            </tbody>
                        </table>
                        <a href="#" class="btn btn-primary">View All Orders</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Notifications and Alerts -->
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        Notifications
                    </div>
                    <div class="card-body">
                        <ul class="list-group">
                            <li class="list-group-item">Inventory for "Product A" is below threshold.</li>
                            <li class="list-group-item">New supplier contract signed with "Supplier X".</li>
                            <li class="list-group-item">Sales target for January reached.</li>
                            <li class="list-group-item">System maintenance scheduled for 2025-01-15.</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        Recent Alerts
                    </div>
                    <div class="card-body">
                        <ul class="list-group">
                            <li class="list-group-item">Order ORD004 was cancelled by the customer.</li>
                            <li class="list-group-item">Shipment for ORD001 delayed due to weather.</li>
                            <li class="list-group-item">New user registered: Emily Clark.</li>
                            <li class="list-group-item">Payment gateway integration successful.</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Bootstrap JS, Popper.js, and jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <!-- Chart.js Scripts -->
    <script>
        // Inventory Levels Bar Chart
        var ctxInventory = document.getElementById('inventoryChart').getContext('2d');
        var inventoryChart = new Chart(ctxInventory, {
            type: 'bar',
            data: {
                labels: ['Product A', 'Product B', 'Product C', 'Product D', 'Product E'],
                datasets: [{
                    label: 'Stock Levels',
                    data: [120, 80, 150, 60, 200],
                    backgroundColor: 'rgba(54, 162, 235, 0.6)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // Sales by Category Pie Chart
        var ctxSales = document.getElementById('salesChart').getContext('2d');
        var salesChart = new Chart(ctxSales, {
            type: 'pie',
            data: {
                labels: ['Electronics', 'Apparel', 'Home Goods', 'Books', 'Others'],
                datasets: [{
                    label: 'Sales by Category',
                    data: [30000, 15000, 10000, 5000, 5000],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.6)',
                        'rgba(54, 162, 235, 0.6)',
                        'rgba(255, 206, 86, 0.6)',
                        'rgba(75, 192, 192, 0.6)',
                        'rgba(153, 102, 255, 0.6)'
                    ],
                    borderColor: [
                        'rgba(255,99,132,1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true
            }
        });
    </script>
</body>
</html>