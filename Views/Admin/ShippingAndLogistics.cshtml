@{
    ViewData["Title"] = "Shipping and Logistics";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Your Application</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome for Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <style>
        .card {
            margin-bottom: 20px;
        }
        .table-responsive {
            max-height: 400px;
            overflow-y: auto;
        }
        .status-pending {
            color: orange;
            font-weight: bold;
        }
        .status-shipped {
            color: blue;
            font-weight: bold;
        }
        .status-delivered {
            color: green;
            font-weight: bold;
        }
        .status-cancelled {
            color: red;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container-fluid mt-4">
        <h2>@ViewData["Title"]</h2>
        <hr />

        <!-- Overview Cards -->
        <div class="row">
            <div class="col-md-3">
                <div class="card text-white bg-info">
                    <div class="card-body">
                        <h5 class="card-title">Total Shipments</h5>
                        <p class="card-text">350 Shipments</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-warning">
                    <div class="card-body">
                        <h5 class="card-title">Pending Deliveries</h5>
                        <p class="card-text">75 Deliveries</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-success">
                    <div class="card-body">
                        <h5 class="card-title">Delivered</h5>
                        <p class="card-text">250 Deliveries</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-danger">
                    <div class="card-body">
                        <h5 class="card-title">Cancelled</h5>
                        <p class="card-text">25 Shipments</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Shipments Table -->
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span>Shipment Tracking</span>
                        <button class="btn btn-primary btn-sm" data-toggle="modal" data-target="#addShipmentModal">
                            <i class="fas fa-plus"></i> Add Shipment
                        </button>
                    </div>
                    <div class="card-body table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Shipment ID</th>
                                    <th>Order ID</th>
                                    <th>Carrier</th>
                                    <th>Origin</th>
                                    <th>Destination</th>
                                    <th>Departure Date</th>
                                    <th>Estimated Arrival</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>SHIP001</td>
                                    <td>ORD123</td>
                                    <td>Sundarban Courier</td>
                                    <td>Dhaka, Mirpur</td>
                                    <td>Chittagong, Agrabad</td>
                                    <td>2025-01-05</td>
                                    <td>2025-01-07</td>
                                    <td class="status-delivered">Delivered</td>
                                    <td>
                                        <button class="btn btn-sm btn-info" data-toggle="modal" data-target="#viewShipmentModal">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button class="btn btn-sm btn-warning" data-toggle="modal" data-target="#editShipmentModal">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </td>
                                </tr>
                                <tr>
                                    <td>SHIP002</td>
                                    <td>ORD124</td>
                                    <td>SA Paribahan</td>
                                    <td>Sylhet, Zindabazar</td>
                                    <td>Khulna, Boyra</td>
                                    <td>2025-01-06</td>
                                    <td>2025-01-08</td>
                                    <td class="status-pending">Pending</td>
                                    <td>
                                        <button class="btn btn-sm btn-info" data-toggle="modal" data-target="#viewShipmentModal">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button class="btn btn-sm btn-warning" data-toggle="modal" data-target="#editShipmentModal">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </td>
                                </tr>
                                <tr>
                                    <td>SHIP003</td>
                                    <td>ORD125</td>
                                    <td>Continental Courier</td>
                                    <td>Rajshahi, New Market</td>
                                    <td>Barisal, Sadar Road</td>
                                    <td>2025-01-07</td>
                                    <td>2025-01-09</td>
                                    <td class="status-shipped">Shipped</td>
                                    <td>
                                        <button class="btn btn-sm btn-info" data-toggle="modal" data-target="#viewShipmentModal">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button class="btn btn-sm btn-warning" data-toggle="modal" data-target="#editShipmentModal">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </td>
                                </tr>
                                <!-- Add more shipment rows as needed -->
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer">
                        <a href="#" class="btn btn-primary btn-sm">View All Shipments</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modals -->

        <!-- Add Shipment Modal -->
        <div class="modal fade" id="addShipmentModal" tabindex="-1" aria-labelledby="addShipmentModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <form>
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="addShipmentModalLabel">Add New Shipment</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="form-group">
                                <label for="shipmentID">Shipment ID</label>
                                <input type="text" class="form-control" id="shipmentID" placeholder="Enter Shipment ID" required>
                            </div>
                            <div class="form-group">
                                <label for="orderID">Order ID</label>
                                <input type="text" class="form-control" id="orderID" placeholder="Enter Order ID" required>
                            </div>
                            <div class="form-group">
                                <label for="carrier">Carrier</label>
                                <select class="form-control" id="carrier" required>
                                    <option>Sundarban Courier</option>
                                    <option>SA Paribahan</option>
                                    <option>Continental Courier</option>
                                    <option>Janani Courier</option>
                                    <option>Karatoa Courier</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="origin">Origin</label>
                                <input type="text" class="form-control" id="origin" placeholder="Enter Origin Location" required>
                            </div>
                            <div class="form-group">
                                <label for="destination">Destination</label>
                                <input type="text" class="form-control" id="destination" placeholder="Enter Destination Location" required>
                            </div>
                            <div class="form-group">
                                <label for="departureDate">Departure Date</label>
                                <input type="date" class="form-control" id="departureDate" required>
                            </div>
                            <div class="form-group">
                                <label for="estimatedArrival">Estimated Arrival</label>
                                <input type="date" class="form-control" id="estimatedArrival" required>
                            </div>
                            <div class="form-group">
                                <label for="status">Status</label>
                                <select class="form-control" id="status" required>
                                    <option>Pending</option>
                                    <option>Shipped</option>
                                    <option>Delivered</option>
                                    <option>Cancelled</option>
                                </select>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary">Add Shipment</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Edit Shipment Modal -->
        <div class="modal fade" id="editShipmentModal" tabindex="-1" aria-labelledby="editShipmentModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <form>
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="editShipmentModalLabel">Edit Shipment</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <!-- Similar to Add Shipment Modal but with pre-filled data -->
                            <div class="form-group">
                                <label for="editShipmentID">Shipment ID</label>
                                <input type="text" class="form-control" id="editShipmentID" value="SHIP001" required>
                            </div>
                            <div class="form-group">
                                <label for="editOrderID">Order ID</label>
                                <input type="text" class="form-control" id="editOrderID" value="ORD123" required>
                            </div>
                            <div class="form-group">
                                <label for="editCarrier">Carrier</label>
                                <select class="form-control" id="editCarrier" required>
                                    <option>Sundarban Courier</option>
                                    <option>SA Paribahan</option>
                                    <option>Continental Courier</option>
                                    <option>Janani Courier</option>
                                    <option>Karatoa Courier</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="editOrigin">Origin</label>
                                <input type="text" class="form-control" id="editOrigin" value="Dhaka, Mirpur" required>
                            </div>
                            <div class="form-group">
                                <label for="editDestination">Destination</label>
                                <input type="text" class="form-control" id="editDestination" value="Chittagong, Agrabad" required>
                            </div>
                            <div class="form-group">
                                <label for="editDepartureDate">Departure Date</label>
                                <input type="date" class="form-control" id="editDepartureDate" value="2025-01-05" required>
                            </div>
                            <div class="form-group">
                                <label for="editEstimatedArrival">Estimated Arrival</label>
                                <input type="date" class="form-control" id="editEstimatedArrival" value="2025-01-07" required>
                            </div>
                            <div class="form-group">
                                <label for="editStatus">Status</label>
                                <select class="form-control" id="editStatus" required>
                                    <option>Pending</option>
                                    <option>Shipped</option>
                                    <option>Delivered</option>
                                    <option>Cancelled</option>
                                </select>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-warning">Save Changes</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- View Shipment Modal -->
        <div class="modal fade" id="viewShipmentModal" tabindex="-1" aria-labelledby="viewShipmentModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="viewShipmentModalLabel">Shipment Details</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <!-- Display shipment details -->
                        <p><strong>Shipment ID:</strong> SHIP001</p>
                        <p><strong>Order ID:</strong> ORD123</p>
                        <p><strong>Carrier:</strong> Sundarban Courier</p>
                        <p><strong>Origin:</strong> Dhaka, Mirpur</p>
                        <p><strong>Destination:</strong> Chittagong, Agrabad</p>
                        <p><strong>Departure Date:</strong> 2025-01-05</p>
                        <p><strong>Estimated Arrival:</strong> 2025-01-07</p>
                        <p><strong>Status:</strong> Delivered</p>
                        <!-- Add more details as needed -->
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <!-- Optionally, add buttons to edit or delete the shipment -->
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Bootstrap JS, Popper.js, and jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <!-- Optional: Custom JavaScript for Enhancements -->
    <script>
        $(document).ready(function () {
            // Handle Add Shipment Form Submission
            $('form').on('submit', function (event) {
                event.preventDefault();
                // Here you would typically send the form data to the server via AJAX
                alert('Form submitted! (This is a dummy action)');
                $(this).closest('.modal').modal('hide');
            });

            // Optional: Populate Edit and View Modals with Data
            // This can be enhanced by fetching data dynamically based on the selected shipment
        });
    </script>
</body>
</html>